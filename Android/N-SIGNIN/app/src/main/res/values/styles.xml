<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/Kettleman</item>
        <item name="colorPrimaryDark">@color/Kettleman</item>
        <item name="colorAccent">@color/CorfuWaters</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="button_pager">
        <item name="android:height">20dp</item>
        <item name="android:textColor">@color/CorfuWaters</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@null</item>
    </style>
</resources>